= form_for @bethelstudent do |f|
  -if @bethelstudent.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bethelstudent.errors.count, "error")} prohibited this bethelstudent from being saved:"
      %ul
        - @bethelstudent.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :year
    = f.number_field :year
  .field
    = f.label :sex
    = f.text_field :sex
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :tuition_paid
    = f.number_field :tuition_paid
  .field
    = f.label :tuition_due
    = f.number_field :tuition_due
  .actions
    = f.submit 'Save'
